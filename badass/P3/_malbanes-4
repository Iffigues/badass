#setup vxlan with no ip
su
ip link add br0 type bridge
ip link set dev br0 up
ip link add name vxlan10 type vxlan id 10 dstport 4789
brctl addif br0 eth0
brctl addif br0 vxlan10
ip link set dev vxlan10 up
exit

#open FRR daemons shell
vtysh
conf t

hostname malbanes-4
no ipv6 forwarding
!
interface eth2
 ip address 10.1.1.10/30 # Point-to-point link with RR
 ip ospf area 0
!
interface lo
 ip address 1.1.1.4/32 # Unique lo of vtep device
 ip ospf area 0
!

router bgp 1
 neighbor 1.1.1.1 remote-as 1
 neighbor 1.1.1.1 update-source lo  # Attach vtep to RR loopback adress
 !
 address-family l2vpn evpn
  neighbor 1.1.1.1 activate
  advertise-all-vni         # Share information about all the virtual networks to RR
 exit-address-family
!
router ospf
!

#verification de l'éligibilité
do sh ip rout
do sh bgp summary
do sh bgp l2vpn evpn
#Une route Target à était généré
